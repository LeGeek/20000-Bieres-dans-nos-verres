<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fr.amu.vingtkbieres.vingtkbieresdansnosverres.recherche.DetailBiere">

    <!-- Dummy item to prevent AutoCompleteTextView from receiving focus -->
    <LinearLayout
        android:focusable="true" android:focusableInTouchMode="true"
        android:layout_width="0px" android:layout_height="0px"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/boutonMenu"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="Large Text"
        android:id="@+id/textViewName"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textViewStyle"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textViewName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textViewOverallScore"
        android:layout_below="@+id/textViewStyle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textViewStyleScore"
        android:layout_below="@+id/textViewOverallScore" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textViewAbv"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/textViewStyleScore" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textViewLocation"
        android:layout_below="@+id/textViewAbv" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageDetailFlag"
        android:layout_marginLeft="15dp"
        android:layout_alignTop="@+id/textViewLocation"
        android:layout_toEndOf="@+id/textViewLocation" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText"
        android:paddingBottom="20dp"
        android:hint="Que pensez vous de cette biÃ¨re?"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:progressDrawable="@drawable/custom_ratingbar_selector"
        android:numStars="4"
        android:stepSize="1"
        android:rating="3"
        android:layout_above="@+id/editText"
        android:layout_centerHorizontal="true"
        android:id="@+id/ratingBar" />



</RelativeLayout>